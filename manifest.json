{
  "manifest_version": 3,
  "name": "Synapse Capture",
  "version": "0.1.0",
  "description": "Save pages, selections, products, and videos to your Synapse app.",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "Save to Synapse" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
