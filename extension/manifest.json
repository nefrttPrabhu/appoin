{
  "manifest_version": 3,
  "name": "Synapse Capture",
  "version": "1.0",
  "description": "Capture ideas, links, and content directly to your Synapse brain.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
